{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Babel",
            "program": "${workspaceRoot}/lib/src/index.js",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceRoot}/lib/src/**.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/lib/test"
            ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build:test",
            "outFiles": [
                "${workspaceRoot}/lib/test/**.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha-webpack Tests",
            "program": "${workspaceFolder}/node_modules/mocha-webpack/lib/cli/index.js",
            "args": [
                "--colors",
                "--webpack-config",
                "webpack.config.js",
                "--require",
                "test/setup.js",
                "test/**/*.spec.js"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "testing"
            },
            "sourceMaps": true,
            "smartStep": true,
            "outFiles": [
                "${workspaceFolder}/lib/build.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "cwd": "${workspaceFolder}"
        }
    ]
}